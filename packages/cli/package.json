{
  "name": "create-ts-lib",
  "version": "0.4.0",
  "description": "Create your TypeScript module with no build configuration",
  "scripts": {
    "start": "node ./index.js",
    "link-templates": "lerna add @nobrainr/typescript_universal-webpack-karma_jasmine --scope=create-ts-lib --dev --exact",
    "publish-cli": "semantic-release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "opencollective-postinstall"
  },
  "repository": "nobrainr/typescript-webpack-starter",
  "keywords": [
    "webpack",
    "javascript",
    "typescript",
    "nodejs",
    "es2015",
    "es6",
    "npm",
    "npm-package",
    "webpack-server",
    "karma",
    "karma-jasmine",
    "jasmine",
    "unit-test"
  ],
  "author": "emyann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emyann/typescript-webpack-starter/issues"
  },
  "homepage": "https://github.com/emyann/typescript-webpack-starter#readme",
  "files": [
    "index.js",
    "createTsLib.js",
    "template/"
  ],
  "preferGlobal": true,
  "bin": {
    "create-ts-lib": "./index.js"
  },
  "dependencies": {
    "@nobrainr/typescript_server": "^1.0.0",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "cross-spawn": "^6.0.5",
    "fs-extra": "^7.0.0",
    "opencollective-postinstall": "^2.0.0",
    "semver": "^5.5.1",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@nobrainr/typescript_universal-webpack-karma_jasmine": "^1.0.0",
    "marked": "^4.0.10",
    "semantic-release": "^15.9.9"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/typescript-webpack-starter"
  }
}
